# Environment Configuration Example - Admin Core

# Admin Settings
# ==============

# Enable hash protection (development: True, production: should be True)
ADMIN_ENABLE_HASH=True

# Admin hash value (auto-generated if not set)
# Để trống để auto-generate, hoặc set giá trị cụ thể
ADMIN_HASH=

# Allowed admin IPs (comma-separated, optional)
# ADMIN_ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# Admin rate limiting settings
ADMIN_MAX_FAILED_ATTEMPTS=5
ADMIN_LOCKOUT_DURATION_MINUTES=30

# Admin interface title
ADMIN_SITE_HEADER="PriceSynC - Admin Dashboard"
ADMIN_SITE_TITLE="Platform Admin"

# ============================================================
# Django Default Settings
# ============================================================

DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL default; set ENGINE to sqlite3 for local lightweight runs)
DATABASE_ENGINE=django_tenants.postgresql_backend
DATABASE_NAME=saas_app
DATABASE_USER=saas_app
DATABASE_PASSWORD=saas_app_dev
DATABASE_HOST=  # leave empty to use UNIX socket; set 127.0.0.1 for TCP
DATABASE_PORT=5432
# For sqlite override:
# DATABASE_ENGINE=django.db.backends.sqlite3
# DATABASE_NAME=db.sqlite3

# Security (production)
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_SSL_REDIRECT=False

# ============================================================
# Logging
# ============================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
